#-----------------------------------------------------------------------------#
# VERBOSITY                                                                   #
#-----------------------------------------------------------------------------#
/control/execute mac/verbose.mac

#-----------------------------------------------------------------------------#
# VISUALIZATION PARAMETERS                                                    #
#-----------------------------------------------------------------------------#
/vis/disable
#/control/execute mac/visu.mac

#-----------------------------------------------------------------------------#
# SET MATERIAL DATABASE                                                       #
#-----------------------------------------------------------------------------#
/gate/geometry/setMaterialDatabase data/GateMaterials.db

#-----------------------------------------------------------------------------#
# WORLD                                                                       #
#-----------------------------------------------------------------------------#
/gate/world/geometry/setXLength 200. cm
/gate/world/geometry/setYLength 200. cm
/gate/world/geometry/setZLength 200. cm
/gate/world/setMaterial Air
/gate/world/vis/forceWireframe

#-----------------------------------------------------------------------------#
# FPD for imaging                                                             #
# Size: 14.5728(Y)x11.6424(Z) cmxcm;                                          #
# Mode:                                                                       #
#       + Normal: 2944(Y)x2352(Z) pixels, 0.0495x0.0495 umxum;                # 
#       + Binning: 1472(Y)x1176(Z) pixels, 0.099x0.099 umxum;                 #  
#-----------------------------------------------------------------------------#
/control/execute mac/cbct-geo-FPD.mac

#-----------------------------------------------------------------------------#
# Phantom in rotation (1 deg/s):                                              #
#-----------------------------------------------------------------------------#
#/control/execute mac/cbct-geo-phantom-normal.mac
#/gate/waterCylinder/moves/insert rotation
#/gate/waterCylinder/rotation/setSpeed 1. deg/s
#/gate/waterCylinder/rotation/setAxis 0 0 1
/control/execute mac/cbct-geo-phantom-cylinder.mac

#-----------------------------------------------------------------------------#
# PHYSICS                                                                     #
#-----------------------------------------------------------------------------#
/control/execute mac/cbct-physics.mac

#-----------------------------------------------------------------------------#
# OUTPUT                                                                      #
#-----------------------------------------------------------------------------#
/control/execute mac/cbct-output.mac
/control/execute mac/cbct-actor.mac

#-----------------------------------------------------------------------------#
# INITIALIZATION                                                              #
#-----------------------------------------------------------------------------#
/gate/run/initialize

#-----------------------------------------------------------------------------#
# SOURCE                                                                      #
#-----------------------------------------------------------------------------#
/control/execute mac/cbct-source-spec.mac

#-----------------------------------------------------------------------------#
# ACQUISITION                                                                 #
#-----------------------------------------------------------------------------#
/control/execute mac/cbct-acquisition.mac
